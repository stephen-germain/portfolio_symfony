                                <a href="{{path('skills_delete', {id:langage.id}) }}">supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div >
            <h4>frameworks</h4>
            <table class="table table-bordered table-hover table-sm text-center">
                <thead>
                    <tr>
                        <th>compétence</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for framework in skill2 %}
