                <thead>
                    <tr>
                        <th>compétence</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for langage in skill1 %}
                        <tr>
                            <td>{{langage.nom}}</td>
                            <td>
