        <title>Portfolio - {% block title %}base{% endblock %}</title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/styleAdmin.css') }}"> {# asset pour viser le dossier "public" #}

        {% block stylesheets %}{% endblock %}
