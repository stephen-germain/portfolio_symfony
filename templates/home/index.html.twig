                    {# </div> #}
                {# </div> #}
            {# </div> #}
        </div>
    </section>

    <section id="projects" class="py-5 section-3">
        <div class="container py-5 text-center">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>{% trans %}Projets{% endtrans %}</h2>
                    <div class="divider"></div>
                    <p class="text-muted lead pt-5">{% trans %}Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate.{% endtrans %}</p>
                </div>
                <div class="row m-3 global">
                    {% for project in projects %}
                        <div class="col-md-6 mb-4 carte">
                            {# <div class="card"> #}
                                <a class="text-decoration-none text-dark" href="{{ project.url }}"> 
                                    <div>
                                        <img src="{{ asset('img/images/' ~ project.img)  }}" class="card-img-top" alt="projets">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">{{ project.title}}</h5>
                                        <p class="card-text">{{ project.text }}</p>
                                    </div>
                                </a>
                            {# </div> #}
                        </div>
                    {% endfor %}
                </div>  
            </div>
        </div>
    </section>

    <section id="contact" class="py-5 section-4">
        <div class="container py-5 text-center">
            <div class="row">
                <div class="col-12 p-4">
                    <h2>Contact</h2>
                    <div class="divider"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 mt-md-0 mt-3">
                    <h5 class="text-uppercase">{{ nom|raw }}</h5>
                    <p>{{ ville|raw }}</p>
                    <p>{{ mail|raw }}</p>
                </div>
                <div class="col-md-8 mx-auto">
                    {# <h2>Contact</h2>
                    <div class="divider"></div> #}
                    <!-- Default form contact -->
                    <div class="text-center border border-light p-5">
                        {{ form_start(formulaireDeContact) }}
                        <div class="row">
                            <div class="col-12 col-md-6">
                                {{ form_row(formulaireDeContact.nom, {'attr': {'data-aos': 'fade-up'}}) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(formulaireDeContact.prenom, {'attr': {'data-aos': 'fade-up'}}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6">
                               {{ form_row(formulaireDeContact.email, {'attr': {'data-aos': 'fade-up'}}) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(formulaireDeContact.objet, {'attr': {'data-aos': 'fade-up'}}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                {{ form_row(formulaireDeContact.message, {'attr': {'data-aos': 'fade-up'}}) }}
                            </div>
                        </div>  
                        <div class="row">
                            <div class="col-12 text-center">
                                <button class="btn btn-dark" data-aos="fade-up">Envoyer</button>
                            </div>
                        </div> 
                        {{ form_end(formulaireDeContact) }}
                    </div>
                </div>
            </div>
        </div> 
    </div>
    </section>
    {% block javascripts %}

        <script>
var slideIndex = 1;
showDivs(slideIndex);

function plusDivs(n) {
  showDivs(slideIndex += n);
}

function showDivs(n) {
  var i;
  var x = document.getElementsByClassName("mySlides");
  if (n > x.length) {slideIndex = 1}
  if (n < 1) {slideIndex = x.length}
  for (i = 0; i < x.length; i++) {
    x[i].style.display = "none";  
  }
  x[slideIndex-1].style.display = "block";  
}
</script>
    {% endblock %}
{% endblock %}
